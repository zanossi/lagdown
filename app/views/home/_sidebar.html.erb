


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Post.human_attribute_name(:title) %></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_url(post, subdomain: @blog.subdomain) %></td>
        <td><%= link_to t('crud.edit'), [:edit, @blog, post] %></td>
        <td><%= link_to t('crud.delete'), [@blog, post], method: :delete, data: {confirm: t('message.are_you_sure')} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
