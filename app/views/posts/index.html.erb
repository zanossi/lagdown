<div class="page-header">
  <h1><%= @blog.name %><%=link_to image_tag("rss.jpg",size:"70x100",alt:"this is rss button"),rss_path%></h1>
</div>


<% @posts.each do |post| %>
  <div class="page-header">
    <h2><%= link_to post.title, post_path(post) %></h2>
  </div>
  <div class="highlight">
    <%= sanitize LagdownRenderer.render(post.content) %>
  </div>
  
 


<% end %>
<%= paginate @posts %>

<%= mathjax_script_tag %>